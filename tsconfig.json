{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "paths": {
            "@/*": ["./src/*"],
            "@components/*": ["./src/components/*"],
            "@features/*": ["./src/features/*"],
            "@db/*": ["./src/db/*"],
            "@store/*": ["./src/store/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@utils/*": ["./src/utils/*"],
            "@constants/*": ["./src/constants/*"],
            "@shared/*": ["./src/shared/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
